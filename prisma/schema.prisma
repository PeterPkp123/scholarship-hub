generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Word {
    id String @id @default(cuid())

    content String @unique

    meanings  Meaning[]
    vocabSets VocabSet[]
    phonetics Phonetic[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Phonetic {
    id String @id @default(cuid())

    content  String
    audioUrl String

    word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
    wordId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([wordId])
}

model Meaning {
    id String @id @default(cuid())

    partOfSpeech String

    word   Word   @relation(fields: [wordId], references: [id], onDelete: Cascade)
    wordId String

    definitions Definition[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([wordId])
}

model Definition {
    id String @id @default(cuid())

    content String

    meaning   Meaning @relation(fields: [meaningId], references: [id], onDelete: Cascade)
    meaningId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([meaningId])
}

model VocabSet {
    id String @id @default(cuid())

    name String

    words Word[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model MathTest {
    id String @id @default(cuid())

    name String

    questions MathQuestion[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model MathQuestion {
    id String @id @default(cuid())

    content String

    mathTest   MathTest     @relation(fields: [mathTestId], references: [id], onDelete: Cascade)
    mathTestId String
    graph      MathGraph?
    answers    MathAnswer[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([mathTestId])
}

model MathAnswer {
    id String @id @default(cuid())

    content String

    mathQuestion   MathQuestion @relation(fields: [mathQuestionId], references: [id], onDelete: Cascade)
    mathQuestionId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([mathQuestionId])
}

model MathGraph {
    id String @id @default(cuid())

    infix String
    rpn   String

    mathQuestion   MathQuestion @relation(fields: [mathQuestionId], references: [id], onDelete: Cascade)
    mathQuestionId String       @unique

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
